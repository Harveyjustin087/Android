<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Auctions"
    android:theme="@style/Theme.CardBidders2021"
    android:background="@color/black">
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="50dp"
            android:textStyle="bold"
            android:text="@string/auctions_title"
            android:textAlignment="center"
            android:textColor="@color/white"/>
    </TableRow>
    <TableRow
        android:layout_gravity="center"
        android:layout_marginStart="5dp">
        <Button
            android:layout_width="400dp"
            android:id="@+id/btn_magic"
            android:layout_height="wrap_content"
            android:text="@string/btn_magic">

        </Button>
    </TableRow>
    <TableRow
        android:layout_gravity="center"
        android:layout_marginStart="5dp">
        <Button
            android:layout_width="400dp"
            android:id="@+id/btn_sports"
            android:layout_height="wrap_content"
            android:text="@string/btn_sports">

        </Button>
    </TableRow>
    <TableRow
    android:layout_gravity="center"
    android:layout_marginStart="5dp">
    <Button
        android:layout_width="400dp"
        android:id="@+id/btn_comics"
        android:layout_height="wrap_content"
        android:text="@string/btn_comics">

    </Button>
</TableRow>
    <TableRow
        android:layout_gravity="center"
        android:layout_marginStart="5dp">
    <Button
        android:layout_width="400dp"
        android:id="@+id/btn_pokemon"
        android:layout_height="wrap_content"
        android:text="@string/btn_pokemon">

    </Button>
    </TableRow>

  </TableLayout>