<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ComicFragment"
        android:background="@color/green">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_comics_title"
            android:id="@+id/about_comics_header"
            android:textColor="@color/black"
            android:layout_gravity="top"
            android:layout_marginStart="90dp"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/comic_gif"
            android:layout_width="match_parent"
            android:layout_marginTop="35dp"
            android:layout_height="350dp"
            android:layout_gravity="top"
            android:foregroundGravity="top"
            android:src="@drawable/comics" />

        <TextView
            android:id="@+id/about_comics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="380dp"
            android:text="@string/fragment_comics"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </FrameLayout>
</ScrollView>