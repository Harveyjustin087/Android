<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SportsFragment"
    android:background="@color/red">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_sports_title"
        android:id="@+id/about_sports_header"
        android:textColor="@color/white"
        android:layout_gravity="top"
        android:layout_marginStart="100dp"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/baseball_gif"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="35dp"
        android:layout_gravity="top"
        android:src="@drawable/baseball" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/about_sports"
        android:text="@string/fragment_sports"
        android:layout_marginTop="390dp"
        android:textSize="25dp"
        android:textColor="@color/white"/>

</FrameLayout>
</ScrollView>